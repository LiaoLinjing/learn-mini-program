<!--page/text/text.wxml-->

<!------- ------ 1.基本使用 -----  ---------->

<!-- text属于行内元素，不同的text不会自动换行 -->
<text>你好</text>
<!-- 换行加换行符 -->
<text>code\n</text>
<text>小程序</text>

<!------- ------ 2.selectable:true-----  ---------->
<!-- 默认情况下长按是不能被选中文本的，加上selectable就能被选中了 -->
<text selectable="{{true}}">\n在真机状态能被选中第1中写法</text>
<text selectable>\n在真机状态能被选中第2种写法</text>


<!------- ------ 3.space:决定文本空格大小-----  ---------->
<text space="nbsp">\n决定文本空格大小 哈哈</text>
<text space="ensp">\n决定文本空格大小 哈哈</text>
<text space="emsp">\n决定文本空格大小 哈哈</text>

<!------- ------ 4.decode：是否解码文本----  ---------->
<text decode>\n 5 &gt; 3</text>
